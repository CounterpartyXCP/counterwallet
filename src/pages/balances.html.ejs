      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-bind="click: hide">Cancel</button>
        <button type="button" data-bind="click: submitForm" class="btn btn-primary">Send</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<!-- modal for sweep (import) -->
<div data-bind="showModal: shown, validationOptions: { insertMessages: false }" id="sweepModal" class="modal fade" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="sweepModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" data-bind="click: hide, visible: sweepingProgressionMessage()==''" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">
            <span data-bind="visible: !fromOldWallet">Import (Sweep) Tokens from Another Address</span>
            <span data-bind="visible: fromOldWallet">Import (Sweep) Tokens from Your Old Wallet</span>
        </h4>
      </div>
      <div class="modal-body no-padding">
        <p class="formPadded">
            <span data-bind="visible: !fromOldWallet">Import token funds by "sweeping" them from an external address into an address in this wallet.</span>
            <span data-bind="visible: fromOldWallet">Transition to your new wallet by sweeping over the token funds from your old wallet.</span>
        </p>
        
        <form class="smart-form" data-bind="submit: doAction, visible: sweepingProgressionMessage()==''"><fieldset>
          
          <section data-bind="visible: !fromOldWallet"><div class="row">
            <label class="control-label col col-sm-12">Private Key To Import</label>
            <div class="col col-sm-12">
                <label class="input"><i class="icon-append fa fa-lock"></i>
                    <input name="privateKey" data-bind="value: privateKey, valueUpdate: 'input', attr: {placeholder: 'Enter {{= btc_name}} private key'}" type="text"/>
                </label>
                <span class="invalid" data-bind="validationMessage: privateKey"></span>
                <div class="note">Enter the unencrypted private key to the address with the tokens you want to move over.</div>
            </div>
          </div></section>

          <section data-bind="visible: fromOldWallet"><div class="row">
            <label class="control-label col col-sm-12">Source Address from old wallet</label>
            <div class="col col-sm-12">
                <select class="width-max" data-bind="options: availableOldAddresses, optionsValue: 'WIF', optionsText: 'ADDRESS', select2: { minimumResultsForSearch: 10, escapeMarkup: 'direct' }, value: oldPrivateKey"></select>
                <span class="invalid" data-bind="validationMessage: privateKey"></span>
                <div class="note">Select the address in your old wallet that the specified tokens should be sent from.</div>
            </div>
          </div></section>

          <section><div class="row">
            <label class="control-label col col-sm-12">Destination Address</label>
            <div class="col col-sm-12">
                <select class="width-max" data-bind="options: availableAddresses, optionsValue: 'ADDRESS', optionsText: 'SELECT_LABEL', select2: { minimumResultsForSearch: 10, escapeMarkup: 'direct' }, value: destAddress"></select>
                <span class="invalid" data-bind="validationMessage: destAddress"></span>
                <div class="note">Select the address in your wallet that the specified tokens for the private key above should be sent to.</div>
            </div>
          </div></section>
          <section data-bind="fadeVisibleInOnly: availableAssetsToSweep().length >= 1"><div class="row">
            <label class="control-label col col-sm-12">Tokens to Sweep</label>
            <div class="col col-sm-12">
                <label class="input">
                    <select id="availableAssetsToSweep" multiple="true" class="width-max" data-bind="options: availableAssetsToSweep, optionsValue: 'ASSET', optionsText: 'SELECT_LABEL', select2: { minimumResultsForSearch: 10, escapeMarkup: 'direct' }, selectedOptions: selectedAssetsToSweep"></select>
                </label>
                <span class="invalid" data-bind="validationMessage: selectedAssetsToSweep"></span>
                <div class="note">Select all of the tokens whose total balances you want to move into the destination address.</div>
            </div>
          </div></section>
          <section data-bind="visible: notEnoughBTC() || addressForFeesBalance()>0"><div class="row">
            <label class="control-label col col-sm-12">Private Key used to pay fees</label>
            <div class="col col-sm-12">
                <label class="input"><i class="icon-append fa fa-lock"></i>
                    <input name="privateKeyForFees" data-bind="value: privateKeyForFees, valueUpdate: 'input', attr: {placeholder: 'Enter {{= btc_name}} private key'}" type="text"/>
                </label>
                <span class="invalid" data-bind="validationMessage: privateKeyForFees"></span>
                <span class="note" data-bind="text: addressForFeesBalanceMessage, visible:addressForFeesBalanceMessage()!=''"></span>
                <div class="note">Enter the unencrypted private key that cooresponds to the address used to pay fees.</div>
            </div>
          </div></section>
        </fieldset></form>
        <fieldset data-bind="visible: sweepingProgressionMessage()!=''">
          <section><div class="row" style="margin:15px">
            <p class="message .txt-color-orangeDark" data-bind="text: sweepingProgressionMessage" style="font-weight:bold;"></p>
            <div class="progress progress-striped active" style="margin-top:15px;margin-bottom:0;">
              <div id="sweepingProgressBar" class="progress-bar"  role="progressbar" data-bind="style: { width: sweepingProgressWidth() }">
              </div>
            </div>
          </div></section>  
        <fieldset>
      </div>
      <div class="modal-footer" data-bind="visible: sweepingProgressionMessage()==''">
        <button type="button" class="btn btn-default" data-bind="click: hide">Cancel</button>
        <button type="button" data-bind="click: submitForm" class="btn btn-danger">Sweep</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<!-- modal for sign message -->
<div data-bind="showModal: shown" id="signMessageModal" class="modal fade" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="signMessageModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" data-bind="click: hide" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Sign a Message</h4>
      </div>
      <div class="modal-body no-padding">
        <p class="formPadded">Sign a message from address <b data-bind="text: address"></b>.</p>
        
        <form class="smart-form" data-bind="submit: doAction"><fieldset>
          <section><div class="row">
            <label class="control-label col col-sm-2">Message to Sign</label>
            <div class="col col-sm-10">
                <label class="textarea">
                    <textarea rows="3" class="custom-scroll" data-bind="value: message, valueUpdate : 'input'"></textarea>
                </label>
                <div class="note">Enter the message text to be signed.</div>
            </div>
          </div></section>
          
