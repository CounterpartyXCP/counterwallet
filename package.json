  },
  "devDependencies": {
    "bower": "^1.8.2",
    "chai": "=1.9.1",
    "clean-css": "2.1.8",
    "express": "^4.17.1",
    "express-http-proxy": "^1.5.1",
    "grunt": "^0.4.1",
    "grunt-chrome-compile": "0.2.2",
    "grunt-contrib-copy": "0.4.x",
    "grunt-usemin": "2.1.x",
    "mocha-phantomjs": "4.x",
    "serve": "^6.5.3",
    "uglify-js": "1.3.5"
  },
  "scripts": {
    "prepublish": "grunt",
    "serve": "serve -p 3000 ./build",
